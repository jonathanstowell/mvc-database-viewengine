﻿@model IEnumerable<MvcThemable.Entities.Concrete.DatabaseView>

@{
    ViewBag.Title = "Index";
}

<h1>Default Pages</h1>

<table class="table table-striped table-bordered table-condensed">
    <thead>
        <th>Id</th>
        <th>Domain</th>
        <th>Title</th>
        <th>Body</th>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@Html.ActionLink(item.Id.ToString(), "Edit", new { id = item.Id })</td>
                <td>@item.ViewKey</td>
                <td>@item.Domain</td>
                <td>@item.Controller</td>
                <td>@item.Action</td>
                <td>@item.Title</td>
                <td>@item.Body</td>
            </tr>
        }
    </tbody>
</table>